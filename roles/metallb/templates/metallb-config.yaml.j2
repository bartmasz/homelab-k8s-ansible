apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: ip-pool
  namespace: metallb-system
spec:
  addresses:
    - "{{ metallb_ip_pool }}"
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: metallb-ip-space
  namespace: metallb-system
spec:
  ipAddressPools:
    - ip-pool
